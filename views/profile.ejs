<!DOCTYPE html>
<html lang="en">
<head>
    <title>Profile Page</title>
</head>
<style>
        body {
            font-family: 'Montserrat', sans-serif;
            background-color: black;
            color: white;
        }
        h1 {
            text-align: center;
        }
</style>
<body>
    <%- include('common/header.ejs') %>
    <h1>Welcome, <%= user.name %></h1>
    <hr>
    <h5>Email: <%= user.email %></h5>
    <h5>City: <%= user.city %></h5>
    <h5>
        Skills: 
        <% user.skills.forEach((item) => { %>
            <li> <%= item %> </li>
        <% }) %>
    </h5>
</body>
</html>